<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="330dp"
    android:layout_height="230dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp">

        <ImageView
            android:id="@+id/imagemDoProduto"
            android:layout_width="0dp"
            android:layout_height="115dp"
            android:layout_weight="1"
            android:src="@drawable/product1_128pixel"/>

        <TextView
            android:text="@string/textoAreaProduto"
            android:textSize="18sp"
            android:id="@+id/descricaoDoProduto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:textAlignment="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_margin="7dp">

            <TextView
                android:id="@+id/precoProduto"
                android:text="Preço: R$ 00,00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="22sp"
                android:gravity="center_vertical"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/qntProduto"
                android:text="Qnt: 10 unids"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="22sp"
                android:gravity="center_vertical"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutValidade"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/validadeProduto"
                android:text="Oferta válida até: 00/00/00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="22sp"
                android:textAlignment="center"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>